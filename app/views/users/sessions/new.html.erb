<div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <h2 class="text-center">ポートフォリオ</h2>
        <%= form_with(model: @user, local: true, url: new_user_session_path) do |form| %>
          <div class="form-group">
            <%= form.label :email, '社員番号もしくはメールアドレス' %>
            <%= form.email_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :password, 'パスワード' %>
            <%= form.password_field :password, class: 'form-control' %>
          </div>
          <div class="checkbox">
            <label>
              <%= form.check_box :remember_me %> 次回から入力を省略する
            </label>
          </div>
          <div class="actions">
            <%= form.submit 'ログイン', class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
